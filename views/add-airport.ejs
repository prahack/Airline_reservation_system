 <!-- start banner Area -->
<section class="banner-area relative">
    <div class="overlay overlay-bg">
    </div>				
    <div class="container">
        <div class="row fullscreen align-items-admin ">
            <form class="text-left form-wrap" action="" method="post" enctype="multipart/form-data">
                <% if (message != '') { %>
                    <p class="text-left text-danger" ><%= message %></p>
                <% } %>
                <div class="form-row">
                    <div class="form-group col-md-8">
                        <p style="color: rgb(5, 19, 145); font-size: 20px;">Fill this form to add an airport.</p><br>
                    </div>
                    <div class="form-group col-md-8">
                        <p style="color: black; font-size: 15px;">Code of the airport</p>
                        <input type="text" class="form-control" name="airport_code" id="airport_code" placeholder="Airport code" required>
                    </div>
                    <div class="form-group col-md-8">
                        <p style="color: black; font-size: 15px;">Name of the airport</p>
                        <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
                    </div>
                    <div class="form-group col-md-8">
                        <p style="color: black; font-size: 15px;">Location ID of the airport</p>
                        <select id="location_ID" name="location_ID" class="form-control" required>
                            <option selected disabled>Location ID</option>
                            <% locations.forEach((location, index) => { %>

                                <option value="<%= location.location_ID%>"><%= location.location_ID %> (<%= location.parent%>, <%= location.child%>)</option>

                            <% }) %>

                        </select>
                    </div>
                </div>
                <button type="submit" class="primary-btn" style="background-color: rgba(5, 5, 216, 0.829);">Add an airport</button>	
            </form>
        </div>
        </div>
