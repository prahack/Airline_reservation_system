<%- include ('header.ejs') %>
    <div class="container">
        <form class="add-booking-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <% if (email == undefined) {%>
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" name="name" id="name" placeholder="name" required>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="number" class="form-control" name="age" id="age" placeholder="age" required>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" name="email" id="email" placeholder="email" required>
                    </div>
                <%} else {%>
                    <div class="form-group col-md-4">
                        <input type="number" class="form-control" name="passenger_id" id="passenger_id" value="<%= user.passenger_ID %>" disabled placeholder="id" required>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" name="name" id="name" value="<%= user.name %>" disabled placeholder="name" required>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="number" class="form-control" name="age" id="age" value="<%= user.age %>" disabled placeholder="age" required>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" name="email" id="email" value="<%= user.email %>" disabled placeholder="email" required>
                    </div>
                <% } %>

            </div>
            <div class="form-row">
                <!-- <div class="form-group col-md-4">
                    <input type="number" class="form-control" name="flight_ID" id="flight_ID" placeholder="flight_ID" value="<%= flight_schedule.flight_ID %>" disabled required>
                </div> -->

                <div class="form-group col-md-6">
                    <input type="text" class="form-control" name="date" id="date" placeholder="date" value="<%= flight_schedule.date %>" disabled required>
                    </div>
                        <div class="form-group col-md-6">
                            <select id="seat_ID" name="seat_ID" class="form-control" required>
                                
                                <option selected disabled>Choose seat</option>
                                    <% seats.forEach((s, index) => { %>

                                    <option value="<%= s %>"><%= s %></option>

                                    <% }) %>
                            </select>
                        </div>
                    </div>
            <button type="submit" class="btn btn-primary float-right">Add booking</button>
        </form>
    </div>
</div>
</body>
</html>
