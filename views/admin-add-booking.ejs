<%- include ('header.ejs') %>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-booking-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="number" class="form-control" name="booking_ID" id="booking_ID" placeholder="booking_ID" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number" class="form-control" name="passenger_ID" id="passenger_ID" placeholder="passenger_ID" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number" class="form-control" name="flight_ID" id="flight_ID" placeholder="flight_ID" required>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="date" class="form-control" name="booking_date" id="booking_date" placeholder="booking_date" required>
                </div>
                <div class="form-group col-md-4">
                    <input type="number" class="form-control" name="seat_ID" id="seat_ID" placeholder="seat_ID" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add booking</button>
        </form>
    </div>
</div>
</body>
</html>
